{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

    <div class = "container">
        <h1>Login</h1>

        <form action="{{ path('connexion') }}" method="POST">
            <div class = "form-group">
                <input placeholder="Username" required name="_username" type="text" class="form-control">

            </div>
            <div class = "form-group">
                <input placeholder="Password" required name="_password" type="password" class="form-control">

            </div>
            <div class = "form-group">
                <button type="submit" class="btn btn-success">Se connecter</button>
            </div>
        </form>
    </div>

{% endblock %}
